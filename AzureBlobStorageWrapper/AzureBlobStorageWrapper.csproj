<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>Azure Blob Storage Wrapper SDK</Authors>
    <Company>Azure Blob Storage Wrapper SDK</Company>
    <Product>Azure Blob Storage Wrapper SDK</Product>
    <Description>A wrapper SDK for Azure Blob Storage with Managed Identity authentication support. Provides simplified APIs for common blob operations including upload, download, delete, and list operations.</Description>
    <PackageTags>Azure;BlobStorage;ManagedIdentity;SDK;Wrapper</PackageTags>
    <RepositoryUrl>https://github.com/Caoxuyang/AzureBlobStorageWrapperSDK</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.17.1" />
    <PackageReference Include="Azure.Storage.Blobs" Version="12.26.0" />
  </ItemGroup>

</Project>
